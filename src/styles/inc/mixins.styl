container(w = 1000px)
    display block
    max-width w
    margin 0 auto
    position relative

font(face = Regular)
    if face == Regular
        font-family "PTSansRegular", sans-serif
        font-weight normal
    if face == Bold
        font-family "PTSansBold", sans-serif
        font-weight normal
    if face == Book
        font-family "FranklinGothic-Book", sans-serif
        font-weight normal
    if face == Demi
        font-family "FranklinGothic-Demi", sans-serif
        font-weight normal
