.breadcrumb
    display block
    width 100%
    list-style none
    font-size 0
    padding 0
    margin 0 0 20px

    &__item
        display inline
        color #666
        font()
        font-size 20px
        line-height 1
        padding 0
        margin 0
        &::after
            content ">"
            display inline
            margin 0 11px 0 13px
        &:last-child
            &::after
                content ""
        a
            color #666
            text-decoration none
            border-bottom 1px solid #666
            transition all .3s ease
            &:hover
                color #d90025
                text-decoration none
                border-bottom 1px solid #d90025

        +below(1000px)
            font-size 14px
