.features
    background-color #f4f6f8

    &__list
        list-style none
        container(1210px)
        padding 50px 20px
        font-size 0
        display flex
        flex-flow row nowrap
        justify-content space-between
        +below(940px)
            flex-wrap wrap
            max-width 650px
            padding-bottom 20px
        +below(520px)
            flex-direction column
            align-items center

    &__item
        display inline-block
        flex 0 0 auto
        color #2a2a2a
        font(Book)
        font-size 24px
        line-height 1.2
        padding 0 0 0 80px
        margin 0
        position relative
        span
            font(Demi)
            font-size 30px
            text-transform uppercase
        &::before
            content ""
            position absolute
            top 5px
            left 0
        &:nth-child(1)
            &::before
                sprite($icon_features_1)
        &:nth-child(2)
            &::before
                sprite($icon_features_2)
        &:nth-child(3)
            &::before
                sprite($icon_features_3)
        &:nth-child(4)
            &::before
                sprite($icon_features_4)

        +below(940px)
            flex 1 0 50%
            margin-bottom 30px

        +below(520px)
            flex 0 0 auto
            width 240px
