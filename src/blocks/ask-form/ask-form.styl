.ask-form
    display block
    width 100%
    +below(768px)
        padding-bottom 20px

    &__main
        width 100%
        height 200px
        margin 0 0 30px
        display flex
        flex-flow row nowrap
        +below(768px)
            max-width 540px
            margin 0 auto 10px
            flex-flow row wrap
            height auto

    &__left
        flex 1 1 770px
        margin-right 30px
        display flex
        position relative
        +below(768px)
            flex 1 1 100%
            margin-bottom 20px
            margin-right 0
            order 2

    &__textarea
        flex 1 1 100%
        min-height 200px

    &__textarea-placeholder
        color #b8b8b8
        font()
        font-size 18px
        line-height 1
        margin 0
        position absolute
        top 20px
        left 20px
        z-index 100

    &__right
        flex 1 1 370px
        display flex
        flex-flow row wrap
        align-content space-between
        +below(768px)
            flex 1 1 100%

    &__input
        flex 1 1 100%
        +below(768px)
            margin-bottom 20px

    &__bottom
        height 52px
        display flex
        align-items center
        +below(768px)
            max-width 540px
            margin 0 auto
            flex-flow row wrap
            justify-content: center;

    &__button
        flex 0 0 190px

    &__privacy
        display block
        color #57595b
        font()
        font-size 14px
        line-height 1.4
        margin 0 0 0 30px
        +below(768px)
            flex 1 1 100%
            margin 20px 0 10px
            text-align center
