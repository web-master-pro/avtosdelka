.popup-callback
    display block
    width 100%
    max-width 345px
    background-color white
    background-image linear-gradient(to top, rgba(0, 0, 0, 0.04) 0%, rgba(255, 255, 255, 0.04) 100%)
    padding 25px 20px 20px
    margin auto

    &__title
        color #2a2a2a
        font(Demi)
        font-size 24px
        line-height 1
        text-transform uppercase
        text-align left
        margin 0 0 30px

    &__input
        input()
        height 44px
        line-height 44px
        margin-bottom 12px

    &__bottom
        margin-top 15px
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        +below(480px)
            flex-direction column

    &__button
        button()
        font-size 16px
        max-width 160px
        height 40px
        flex 0 1 auto

    &__privacy
        color black
        font()
        font-size 11px
        line-height 1.4
        margin 0 0 0 10px
        flex 1 1 auto
        +below(480px)
            margin 15px 0 0
            text-align center

.popup
    .mfp-close
        display block
        width 26px
        height 26px
        background-color #de4051
        color transparent
        font-size 0
        border none
        border-radius 50%
        padding 0
        position absolute
        opacity 1
        top -12px
        right -10px
        transition all .3s ease
        &::before
            content ""
            sprite($icon_close_small)
            position absolute
            top 6px
            left 6px
        &:hover
            color transparent
            opacity 1
            text-shadow none
            background-color #be2e3e
        +below(480px)
            top 10px
            right 10px


.mfp-zoom-in .popup
    opacity 0
    transition all 0.2s ease-in-out
    transform scale(0.8)

.mfp-zoom-in.mfp-bg
    opacity 0
    transition all 0.3s ease-out

.mfp-zoom-in.mfp-ready .popup
    opacity 1
    transform scale(1)

.mfp-zoom-in.mfp-ready.mfp-bg
    opacity 0.8

.mfp-zoom-in.mfp-removing .popup
    transform scale(0.8)
    opacity 0

.mfp-zoom-in.mfp-removing.mfp-bg
    opacity 0
