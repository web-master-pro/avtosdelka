.steps
    background-color #f4f6f8

    &__in
        container(1070px)
        padding 50px 20px

    &__title
        color #363835
        font(Demi)
        font-size 30px
        line-height 1
        text-align center
        text-transform uppercase
        margin 0 0 40px

    &__list
        width 100%
        list-style none
        display flex
        flex-flow row nowrap
        justify-content: space-between;
        padding 0
        margin 0
        +below(650px)
            flex-direction column
            align-items center

    &__item
        width 170px
        padding 0
        margin 0 30px
        position relative
        &::before
            content "1"
            display block
            width 60px
            height 60px
            background-color #363835
            border 6px solid white
            border-radius 50%
            color white
            font(Demi)
            font-size 30px
            line-height 1.6
            text-transform uppercase
            text-align center
            position absolute
            top 55px
            left -30px
            z-index 100
            +below(700px)
                top 20%
            +below(650px)
                top 55px

        &:nth-child(2)
            &::before
                content "2"
        &:nth-child(3)
            &::before
                content "3"

        &:nth-child(1)
        &:nth-child(2)
            &::after
                content ""
                sprite($icon_steps_arrow)
                position absolute
                top 74px
                right -140px
                +below(1000px)
                    right -120px
                +below(940px)
                    display none

        +below(650px)
            margin-bottom 40px
            &:last-child
                margin-bottom 0

    &__caption
        color #2a2a2a
        font()
        font-size 20px
        line-height 1
        text-align center
        margin 0

    &__img
        display block
        width 100%
        max-width 170px
        height auto
        margin 0 auto 25px
        border-radius 50%
