.steps
    background-color #f4f6f8

    &__in
        container(1000px)
        padding 50px 20px

    &__title
        color #363835
        font(Demi)
        font-size 30px
        line-height 1
        text-align center
        text-transform uppercase
        margin 0 0 40px
        +below(480px)
            font-size 24px

    &__list
        width 100%
        list-style none
        display flex
        flex-flow row nowrap
        justify-content: space-between;
        padding 0
        margin 0

    &__item
        width 170px
        padding 0
        margin 0 30px
        position relative
        +below(700px)
            margin 0 15px
        +below(480px)
            margin 0 10px

        &:nth-child(1)
        &:nth-child(2)
            &::after
                content ""
                sprite($icon_steps_arrow)
                position absolute
                top 74px
                right -120px
                +below(940px)
                    display none

    &__picture
        margin-bottom 25px
        position relative
        &::before
            content "1"
            display block
            width 60px
            height 60px
            background-color #363835
            border 6px solid white
            border-radius 50%
            color white
            font(Demi)
            font-size 30px
            line-height 1.6
            text-transform uppercase
            text-align center
            position absolute
            top 50%
            transform translateY(-50%)
            left -30px
            z-index 100
            +below(700px)
                width 48px
                height 48px
                border-width 4px
                font-size 24px
                line-height 1.6
                left -24px
            +below(480px)
                width 30px
                height 30px
                border-width 2px
                font-size 18px
                line-height 1.5
                left -10px

    &__item:nth-child(2) &__picture
        &::before
            content "2"
    &__item:nth-child(3) &__picture
        &::before
            content "3"

    &__caption
        color #2a2a2a
        font()
        font-size 20px
        line-height 1
        text-align center
        margin 0
        +below(700px)
            font-size 18px
        +below(480px)
            font-size 16px

    &__img
        display block
        width 100%
        max-width 170px
        height auto
        margin 0 auto
        border-radius 50%
