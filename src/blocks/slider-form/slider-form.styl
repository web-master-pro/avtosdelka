.slider-form
    width 100%
    display flex
    flex-flow row nowrap
    justify-content space-between
    +below(600px)
        max-width 400px
        margin 0 auto
        flex-direction column
        align-items center

    &__input
        max-width 100%
        margin-right 2%
        flex 1 1 32%
        +below(1170px)
            height 42px
            line-height 42px
        +below(600px)
            margin-bottom 20px

    &__button
        max-width 100%
        flex 1 1 32%
        +below(1170px)
            height 42px
        +below(600px)
            max-width 210px
